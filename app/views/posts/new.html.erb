
<h1>Add Post</h1>
<%= form_for :post, url: posts_path do |f| %>
	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |msg| %>
			<div class="alert alert-danger col-sm-6">
				<%= msg %>
			</div>
		<% end %>
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field(:title, {:class => 'form-control form-control-sm col-sm-6'}) %>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area(:body, {:class => 'form-control form-control-sm col-sm-6'}) %>
	</p><p>
		<%= f.submit ({:class => 'btn btn-info btn-sm'}) %><br>
	</p>
<% end %>