<%= javascript_include_tag '/assets/javascripts/app.js','data-turbolinks-track': 'reload' %>
<div id="app">
    <div id="products">
            <div v-for:="prod in products">
                    <img class="group list-group-image" src="http://placehold.it/400x250/000/fff">
                    <div>
                        <h4> {{ prod.name }}</h4>
                        <p>{{ prod.description }}</p>
                        <br>

                        <div>
                            <div>
                                <p>{{ prod.price }}</p>
                            </div>

                            <div>
                                <div>
                                    {{ prod.inStock }} in stock
                                </div>
                                <button class="btn btn-success">Add to cart</button>
                            </div>
                        </div>
                    </div>
            </div>
    </div>
</div>